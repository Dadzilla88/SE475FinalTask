<html lang="en-us">
		<head>
			<%- include('header'); %>
		</head>
		<body>
			<div class="jumbotron">
				<div class="text-center">
					<h2>Please buy something :)</h2>
				</div>
			</div>

			<div class="container col-sm-12 text-center">
			<table class="col-sm-10 text-center table table-striped table-dark">
			<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Description</th>
			<th>Image</th>
			</tr>
			<% Tools.forEach((item,i) => { %>
			    <tr>
                <td><p> <%= item.Name %> </p></td>
                <td><p> <%= item.Price %> </p></td>
                <td><p> <%= item.Description %> </p></td>
                <td><image src='/assets/<%= item.Picture %>' width=200px height=200px /></td>
                </tr>
			<% }) %>
			</table>
            </div>
		</body>
</html>
